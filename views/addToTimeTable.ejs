<%- include('includes/start')%>
<link rel="stylesheet" href="/css/form.css">
<script src="/js/formValidation.js"></script>
</head>
<body>

    <%- include('includes/navbar') %>
    <main>
        <form action="/addToTimeTable" method="post" class="container">
            <table>
                <tr>
                    <td>
                        <label for="subject">Tárgy neve:</label>
                    </td>
                    <td>
                        <input type="text" id="subject" name="subject">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="shortVer">Rövidítés:</label>
                    </td>
                    <td>
                        <input type="text" id="shortVer" name="shortVer" placeholder="nem szükséges">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="day">Nap:</label>
                    </td>
                    <td>
                        <select id="day" name="day">
                            <option value="-">Kérem válasszon</option>
                            <option value="monday">Hétfő</option>
                            <option value="tuesday">Kedd</option>
                            <option value="wednesday">Szerda</option>
                            <option value="thursday">Csütörtök</option>
                            <option value="friday">Péntek</option>
                            <option value="saturday">Szombat</option>
                            <option value="sunday">Vasárnap</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="fromTime">Hány órától:</label>
                    </td>
                    <td>
                        <input id="fromTime" name="fromTime" type="number" placeholder="órában" min="0" max="23"></input>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="lengthTime">Hossz:</label>
                    </td>
                    <td>
                        <input id="lengthTime" name="lengthTime" type="number" placeholder="órában" max="168" min="0"></input>
                    </td>
                </tr>
            </table>
            <button type="submit" disabled>Mentés</button>
        </form>
    </main>
</body>
</html>